<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <h2>First, let's add our ingredients.</h2>
    <section id="ingredients-table">
          <table>
              <thead>
              <tr>
                <th>Current Ingredients</th>
              </tr>
            </thead>
            <tbody>
              <% ingredient.forEach(i => { %>
              <tr>
                <td><%=i.ingredientName%></td>
              </tr>
              <% }) %> 
            </tbody>
          </table> 
    </section>  
    <form action="/" method="POST">
      <label
        >Ingredient:
        <input type="text" name="name" />
       
      <button type="submit">Add Ingredient</button>
    </form>
    <a href="/recipes/new">Next, Create Your Recipe</a>
        
        

    

    <main class="footer"><%- include('../partials/footer') %></main>
  </body>
</html>
